 * @author Carlos Santana
 * @css-for Chrome, Firefox, Safari & Internet Edge
 */

.main-header
    center()
    font('Roboto')
    height 60px
    width 95%
    .logo
        color $darkGray
        float left
        width 200px
        a
            color $darkGray
            text-decoration none
            &:hover
                color #ff0048
    .main-menu
        ul
            font('Open Sans')
            resetList()
            float right
            margin-top 30px
            li
                display inline-block
                a
                    color $darkGray
                    padding-right 10px
                    text-decoration none
                    &:hover
                        color #ff0048
