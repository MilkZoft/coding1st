/**
 * @file _header.styl
 * @author Carlos Santana
 * @css-for Chrome, Firefox, Safari & Internet Edge
 */

.main-header
    center()
    font('Comfortaa')
    height 60px
    width 95%
    .logo
        float left
        position relative
        width 200px
        a
            color $darkGray
            text-decoration none
            .coding
                font-weight $fontWeightBold
            .first
                font-weight $fontWeightLight
            .underscore
                position(absolute, -2px, false, false, 169px)
                color $green
                font-weight $fontWeightLight

    .main-menu
        ul
            font('Open Sans')
            resetList()
            float right
            margin-top 30px
            li
                display inline-block
                a
                    color $darkGray
                    padding-right 10px
                    text-decoration none
                    &:hover
                        color #ff0048
